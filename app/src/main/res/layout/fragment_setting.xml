<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <include layout="@layout/fragment_main_bar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d10"
        android:background="#eeeeee" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eeeeee"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_cache_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_status_white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/d12">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="@dimen/d0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="清理缓存"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/s14" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_cache_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#6c6c6c"
                android:textSize="@dimen/s14"
                tools:ignore="RelativeOverlap"
                tools:text="13M" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/d10"
            android:background="#eeeeee" />


        <LinearLayout
            android:id="@+id/ll_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_status_white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/d12">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="@dimen/d0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="检查更新"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/s14" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main_theme_color"
                android:textSize="@dimen/s14"
                android:visibility="gone"
                tools:ignore="RelativeOverlap"
                tools:text="有更新" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/d10"
            android:background="#eeeeee" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/d10"
            android:padding="@dimen/d12">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/ll_cancel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d38"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:background="@drawable/button_selected"
                android:text="退出登陆"
                android:textColor="@color/main_status_white"
                android:textSize="@dimen/s16" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
