<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/d8"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/d4"
    app:cardElevation="@dimen/p2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d48"
        android:background="@color/main_status_white"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/d10"
        android:paddingRight="@dimen/d10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_query_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="This is main title."
                android:textColor="#ff6c6c6c"
                android:textSize="@dimen/s15" />

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>