<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/empty_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_status_white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/d40"
        android:gravity="center">

        <ImageView
            android:id="@+id/empty_retry_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_empty" />

        <TextView
            style="@style/MultipleStatusView.Content"
            android:id="@+id/empty_view_tv"
            android:paddingTop="@dimen/d10"
            android:text="@string/empty_view_hint"
            android:textSize="@dimen/s16"
            android:textColor="#6c6c6c"/>
    </LinearLayout>

</LinearLayout>