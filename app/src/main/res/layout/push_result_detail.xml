                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/d10"
                            android:text=""
                            android:textColor="@color/main_theme_color"
                            android:textSize="@dimen/s16" />
                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/p35"
                        android:layout_marginTop="@dimen/d10"
                        android:background="#f9eeeeee" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/d8"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/d10"
                            android:orientation="vertical">

                            <android.support.v7.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="采购项目名称"
                                android:textColor="#ff434343"
                                android:textSize="@dimen/s18" />

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/tv_ower_cainame"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/d2"
                                android:text=""
                                android:textSize="@dimen/s16" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/p1"
                            android:layout_marginTop="@dimen/d10"
                            android:background="#eeeeee" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/d10"
                            android:orientation="vertical">

                            <android.support.v7.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="采购人"
                                android:textColor="#ff434343"
                                android:textSize="@dimen/s18" />

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/tv_ower_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/d2"
                                android:text=""
                                android:textSize="@dimen/s16" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/p1"
                            android:layout_marginTop="@dimen/d10"
                            android:background="#eeeeee" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/d10"
                            android:orientation="vertical">

                            <android.support.v7.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="采购代理机构名称"
                                android:textColor="#ff434343"
                                android:textSize="@dimen/s18" />

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/tv_ower_daili"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/d2"
                                android:text=""
                                android:textSize="@dimen/s16" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/p1"
                            android:layout_marginTop="@dimen/d10"
                            android:background="#eeeeee" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/d10"
                            android:orientation="horizontal">

                            <android.support.v7.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="项目包个数:"
                                android:textColor="#ff434343"
                                android:textSize="@dimen/s18" />

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/tv_ower_baoshu"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/d4"
                                android:text=""
                                android:textSize="@dimen/s16" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/p1"
                            android:layout_marginTop="@dimen/d10"
                            android:background="#eeeeee" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/d10"
                            android:orientation="vertical">

                            <android.support.v7.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="采购结果总金额"
                                android:textColor="#ff434343"
                                android:textSize="@dimen/s18" />

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/tv_ower_jine"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/d2"
                                android:textColor="#ff434343"
                                android:textSize="@dimen/s16" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/p1"
                            android:layout_marginTop="@dimen/d10"
                            android:background="#eeeeee" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/d10"
                            android:orientation="vertical">

                            <android.support.v7.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="各包中标/成交供应商名称、地址及报价"
                                android:textColor="#ff434343"
                                android:textSize="@dimen/s18" />

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/tv_ower_baojia"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/d2"
                                android:text=""
                                android:textSize="@dimen/s16" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/p1"
                            android:layout_marginTop="@dimen/d10"
                            android:background="#eeeeee" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/d10"
                            android:orientation="vertical">

                            <android.support.v7.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="评审委员会成员名单"
                                android:textColor="#ff434343"
                                android:textSize="@dimen/s18" />

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/tv_ower_mingdan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/p2"
                                android:text=""
                                android:textSize="@dimen/s16" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/p1"
                            android:layout_marginTop="@dimen/d10"
                            android:background="#eeeeee" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/d10"
                            android:orientation="vertical">

                            <android.support.v7.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="采购人地址和联系方式"
                                android:textColor="#ff434343"
                                android:textSize="@dimen/s18" />

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/tv_ower_lianxi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/d2"
                                android:text=""
                                android:textSize="@dimen/s16" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/p1"
                            android:layout_marginTop="@dimen/d10"
                            android:background="#eeeeee" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/d10"
                            android:orientation="vertical">

                            <android.support.v7.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="采购代理机构地址和联系方式"
                                android:textColor="#ff434343"
                                android:textSize="@dimen/s18" />

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/tv_ower_lianxi2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/d2"
                                android:text=""
                                android:textSize="@dimen/s16" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/p1"
                            android:layout_marginTop="@dimen/d10"
                            android:background="#eeeeee" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/d10"
                            android:orientation="vertical">

                            <android.support.v7.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="采购项目联系人姓名和电话"
                                android:textColor="#ff434343"
                                android:textSize="@dimen/s18" />

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/tv_ower_lianxi_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/d2"
                                android:text=""
                                android:textSize="@dimen/s16" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/p1"
                            android:layout_marginTop="@dimen/d10"
                            android:background="#eeeeee" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/d10"
                            android:orientation="vertical">

                            <android.support.v7.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="候选人公告连接"
                                android:textColor="#ff434343"
                                android:textSize="@dimen/s18" />

                            <TextView
                                android:id="@+id/tv_ower_lianxi_link"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/d2"
                                android:text=""
                                android:textColor="@color/main_theme_color"
                                android:textSize="@dimen/s16" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/p1"
                            android:layout_marginTop="@dimen/d10"
                            android:background="#eeeeee" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/d10"
                            android:orientation="vertical">

                            <android.support.v7.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="评审情况"
                                android:textColor="#ff434343"
                                android:textSize="@dimen/s18" />

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/tv_ower_pinshen"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/d2"
                                android:text=""
                                android:textColor="@color/main_theme_color"
                                android:textSize="@dimen/s16" />

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/p1"
                android:background="#eeeeee" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="end|bottom"
                android:background="@color/main_status_white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="9"
                tools:ignore="DisableBaselineAlignment,ObsoleteLayoutParam"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/ll_fav"
                    android:layout_width="@dimen/d0"
                    android:layout_height="@dimen/d44"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:orientation="horizontal"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:id="@+id/iv_fav"
                        android:layout_width="@dimen/d20"
                        android:layout_height="@dimen/d20"
                        android:contentDescription="@string/app_name"
                        android:src="@mipmap/ic_fav_pressed" />

                    <TextView
                        android:id="@+id/tv_fav_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/d8"
                        android:text="收藏"
                        android:textColor="#9d9d9d"
                        android:textSize="@dimen/s16"
                        tools:ignore="HardcodedText,RtlHardcoded" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/d0"
                    android:layout_height="@dimen/d44"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    tools:ignore="UseCompoundDrawables">

                    <View
                        android:layout_width="@dimen/p1"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/d10"
                        android:layout_marginTop="@dimen/d10"
                        android:background="#eeeeee" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_share"
                    android:layout_width="@dimen/d0"
                    android:layout_height="@dimen/d44"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:orientation="horizontal"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="@dimen/d20"
                        android:layout_height="@dimen/d20"
                        android:contentDescription="@string/app_name"
                        android:src="@mipmap/ic_share_black_pressed" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/d8"
                        android:text="分享"
                        android:textColor="#9d9d9d"
                        android:textSize="@dimen/s16"
                        tools:ignore="HardcodedText,RtlHardcoded" />
                </LinearLayout>

            </LinearLayout>

