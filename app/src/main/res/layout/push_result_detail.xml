        android:layout_height="match_parent"
        app:emptyView="@layout/custom_empty_view"
        app:errorView="@layout/custom_error_view"
        app:loadingView="@layout/custom_loading_view"
        app:noNetworkView="@layout/custom_no_network_view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/d12"
            android:paddingRight="@dimen/d12"
            android:paddingTop="@dimen/d5">

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="@dimen/d0"
                android:layout_weight="1"
                android:scrollbars="none"
                tools:ignore="RtlHardcoded">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_main_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#ff434343"
                        android:textSize="@dimen/s20" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_main_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/d8"
                        android:text=""
                        android:textColor="#ff999999"
                        android:textSize="@dimen/s16"
                        android:visibility="gone"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/d8">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <android.support.v7.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="来        源"
                                android:textSize="@dimen/s16" />

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/tv_main_pub_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/d10"
                                android:text=""
                                android:textColor="@color/main_status_red"
                                android:textSize="@dimen/s16" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <android.support.v7.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="采购方式"
                                android:textSize="@dimen/s16" />

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/tv_main_pub_method"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/d10"
                                android:text=""
                                android:textColor="@color/main_theme_color"
                                android:textSize="@dimen/s16" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <android.support.v7.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="定标日期"
                                android:textSize="@dimen/s16" />

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/tv_main_pub_data"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/d10"
                                android:text=""
                                android:textColor="@color/main_theme_color"
                                android:textSize="@dimen/s16" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <android.support.v7.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="发布时间"
                                android:textSize="@dimen/s16" />

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/tv_main_pub_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/d10"
                                android:text=""
                                android:textColor="@color/main_theme_color"
                                android:textSize="@dimen/s16" />
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
